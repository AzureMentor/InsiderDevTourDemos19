<UserControl x:Class="Uwp.App.Controls.GaugeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:Uwp.App.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="400"
             mc:Ignorable="d">

    <Grid x:Name="Root"
          Padding="40,32"
          BorderBrush="{StaticResource SystemControlBackgroundListLowBrush}"
          BorderThickness="1,0,0,1">
        <Viewbox StretchDirection="DownOnly">
            <Grid ColumnSpacing="80">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <controls:SpeedGauge x:Name="Gauge1"
                                     AverageValue="17000"
                                     MaxValue="19800"
                                     PercentValue="66" />
                <controls:SpeedGauge Grid.Column="1"
                                     AverageValue="19600"
                                     MaxValue="22470"
                                     PercentValue="87" />
            </Grid>
        </Viewbox>
    </Grid>
</UserControl>
